<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinterest Clone</title>
    <link rel="stylesheet" type="text/css" href="./style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script>
        var authenticatedUser = <%= authenticatedUser %>
        if (authenticatedUser) {
            $.get("./templates/authNavigation.ejs", function(data) {
                $("#menu-placeholder").replaceWith(data);
            });
        } else {
            $.get("./templates/navigation.ejs", function(data) {
                $("#menu-placeholder").replaceWith(data);
            });
        }
        $.get("./templates/footer.html", function(data) {
            $("#footer-placeholder").replaceWith(data);
        });
    </script>
    <script src="https://npmcdn.com/masonry-layout@4.1/dist/masonry.pkgd.min.js"></script>

</head>

<html>
<div id="menu-placeholder"></div>

<body>
  <div class = 'gridContainer'>
  <div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 200 }'>
    <div class="grid-item"><img src ='https://s-media-cache-ak0.pinimg.com/236x/7c/32/b7/7c32b7c60e04b528ffe8dd7f074527d7.jpg'>Grid1</div>
    <div class="grid-item">Grid2</div>
    <div class="grid-item">Grid3</div>
    <div class="grid-item">Grid4</div>

  </div>

</div>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <form action = "/add-pin" method = "post">
    <span class="close">&times;</span>
    <input type="text" placeholder="image url" name = "image_url" required><br>
    <input type="text" placeholder="image title" name = "image_title" required><br>
    <input type="text" placeholder="image description" name = "image_description"><br><br>
    <input type = "submit" value = "Submit">
  </form>
    <p>Some text in the Modal..</p>
  </div>

</div>

<script type="text/javascript" src="/javascript-files/modal.js"></script>
</body>


</html>
